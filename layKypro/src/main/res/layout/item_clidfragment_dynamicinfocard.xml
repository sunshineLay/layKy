<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp">
    <com.lay.laykypro.view.CustomView.CircleImageView
        android:id="@+id/cirimg_dynamereply_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_dynamereply_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="9"
        android:text="你好啊"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_toRightOf="@id/cirimg_dynamereply_icon"
        />
    <TextView
        android:id="@+id/tv_dynamereply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="很多的多多多多多多多多多多多多多多多多多多多多"
        android:lines="3"
        android:layout_below="@id/tv_dynamereply_name"
        android:layout_alignLeft="@id/tv_dynamereply_name"
        android:layout_marginTop="@dimen/ten_dp"
        android:ellipsize="end"/>

    <RelativeLayout
        android:id="@+id/rela_dynamereply_con"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:background="@color/colorBackGray"
        android:layout_below="@id/tv_dynamereply_content"
        android:layout_alignLeft="@id/tv_dynamereply_content">
        <ImageView
            android:id="@+id/img_dynamereply_homepage"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/ten_dp"
            />
        <TextView
            android:id="@+id/tv_dynamereply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好sssss吗你快上课上课呢s吗你快上课上课呢"
            android:textStyle="bold"
            android:lines="2"
            android:maxEms="8"
            android:ellipsize="end"
            android:textSize="15sp"
            android:layout_margin="@dimen/ten_dp"
            android:layout_toRightOf="@+id/img_dynamereply_homepage"
            />
        <TextView
            android:id="@+id/tv_dynamereply_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述信息"
            android:lines="1"
            android:maxEms="8"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/twenty_dp"
            android:textStyle="normal"
            android:textSize="10sp"
            android:layout_alignLeft="@+id/tv_dynamereply_title"
            android:layout_below="@+id/tv_dynamereply_title"
            />
    </RelativeLayout>

</RelativeLayout>