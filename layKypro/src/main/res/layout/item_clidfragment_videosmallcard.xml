<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp">
    <ImageView
        android:id="@+id/img_videosmallcard_homepage"
        android:layout_width="180dp"
        android:layout_height="110dp"
        />
    <TextView
        android:id="@+id/tv_videosmallcard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好sssss吗你快上课上课呢s吗你快上课上课呢"
        android:textStyle="bold"
        android:lines="2"
        android:maxEms="8"
        android:ellipsize="end"
        android:textSize="15sp"
        android:layout_margin="@dimen/five_dp"
        android:layout_toRightOf="@+id/img_videosmallcard_homepage"
        />
    <TextView
        android:id="@+id/tv_videosmallcard_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述信息"
        android:lines="1"
        android:maxEms="8"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/twenty_dp"
        android:textStyle="normal"
        android:textSize="10sp"
        android:layout_alignLeft="@+id/tv_videosmallcard_title"
        android:layout_below="@+id/tv_videosmallcard_title"
        />

</RelativeLayout>