<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <ImageView
       android:id="@+id/videocollectionwibf_img"
       android:layout_width="match_parent"
       android:layout_height="200dp"
      />
   <TextView
       android:id="@+id/tv_videocollectionwibf_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/app_name"
       android:lines="1"
       android:maxEms="15"
       android:ellipsize="end"
       android:textStyle="bold"
       android:layout_below="@+id/videocollectionwibf_img"
       />
   <TextView
       android:id="@+id/tv_videocollectionwibf_description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/app_name"
       android:lines="1"
       android:maxEms="15"
       android:ellipsize="end"
       android:textStyle="normal"
       android:layout_below="@+id/tv_videocollectionwibf_title"
       />


</RelativeLayout>